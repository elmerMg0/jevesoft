              {
                icon: <Smartphone className="h-6 w-6" />,
                title: "Multiplataforma",
                description:
                  "Operativo desde cualquier dispositivo: celular, tablet o computadora.",
              },
            ].map((feature, index) => (
              <Card
                key={index}
                className="border-0 bg-white hover:bg-gray-50/50 transition-all duration-300 group p-6"
              >
                <CardHeader className="pb-4">
